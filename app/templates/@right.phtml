<div id="right">
	{if !empty($submenu)}
	<div class="submenu">
		<ul>
			{foreach $submenu AS $links}
				{foreach $links AS $link}
				<li>
					<a href="{link $link['url']}" title="{$link['name']}">{$link['name']}</a>
				</li>
				{/foreach}
			{/foreach}
		</ul>
	</div>
	{/if}
	{block #right}{/block}
</div>
