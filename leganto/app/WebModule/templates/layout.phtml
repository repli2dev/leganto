		<link rel="image_src" href="/img/logo.png" />
		<link rel="shortcut icon" href="/favicon.ico" />

		<title>
			{if $pageTitle}
				{$pageTitle}
				-
			{/if}
			Leganto
		</title>
	</head>
	<body>

		<div id="header">
			<div class="wrapper">
				<a href="/" title="Leganto" id="logo">
					<span id="page-name">Leganto</span>
					<span id="motto">{_'Our motto, short, simple'}</span>
				</a>
				{widget search}
				<div class="clear"></div>
			</div>
		</div>

		{widget navigation}

		<div id="main">
			<div class="wrapper">
                @{block #content}
					{_'No content'}
				@{/block}
				<div class="clear"></div>
			</div>
		</div>

		<div id="footer">
		</div>

	</body>
