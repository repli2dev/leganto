		<title>
			{if $pageTitle}
				{$pageTitle}
				-
			{/if}
			Leganto
		</title>
	</head>
	<body>

		<div id="header">
			<div class="wrapper">
				<div id="logo">
					<img id="logo_image" src="/img/logo.png" alt="{_'Logo - opened book'}" />
					<h1>Leganto</h1>
					<span class="motto">{_'Our motto, short, simple'}</span>
					
				</div>
           	{widget search}
			</div>
		</div>

		{widget navigation}

		<div id="main">
			<div class="wrapper">
                            <div id="flashes">
                                {foreach $flashes AS $flash}
                                <div class="flash {$flash->type}">
                                        {$flash->message}
                                    </div>
                                {/foreach}
                            </div>
                @{block #content}
			{_'No content'}
		@{/block}
			</div>
		</div>

		<div id="footer">
			<div class="wrapper"></div>
		</div>

	</body>
