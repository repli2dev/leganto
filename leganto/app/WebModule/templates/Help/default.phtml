@{extends ../layout.phtml}

{block #content}

<style>
	#help-container {
		
	}
	.help-category {
		margin: 0;
		cursor: pointer;
		line-height: 2em;
		font-weight: normal;
		-webkit-border-radius: 5px;
		-moz-border-radius: 5px;
		border-radius: 5px;
		border: 2px solid #6699bb;
		margin-bottom: 20px;
	}
	.help-category-inner {
		padding: 10px;
	}
	.help-category h2 {
		float: left;
		margin-top: 0px;
	}
	.help-category span.description {
		float: left;
}
</style>
<h1>{_'Help'}</h1>
<p>{_"Welcome in your support section, where you can find answers for nearly all you questions. Whole support page is divided into several categories to make it easy to look into. For continuing select and click on one of categories shown below this text."}</p>

	{if count($data) > 0}
		<div id="help-container">
			{foreach $data as $row}
			<div class="help-category"><div class="help-category-inner">
					<h2><a href="{plink Help:category, $row->id_support_category}">{$row->name}</a></h2>
					<span class="description">{$row->description}</span>
					{if count($data) > 0}
						<div class="cleaner">&nbsp;</div>
						<h3>{_"Pages"}</h3>
						<p>
						{foreach $content[$row->id_support_category] as $item2}
							<a href="{plink Help:text, $item2->id_support_text}">{$item2->name}</a><br />
						{/foreach}
						</p>
					{/if}
					&nbsp;
			</div></div>
			{/foreach}
		</div>
	{else}
		<p><strong>Sorry, but there are no support pages translated into your language. We are working on it!</strong></p>
	{/if}
{/block}