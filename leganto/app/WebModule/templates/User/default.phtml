@{extends layout.phtml}

@{block #subcontent}
    <div id="user-info">
        <img class="icon" src="{$user->getId(),150|userico}" alt="{$user->nickname}" width="150" />
        <h1>{$user->nickname}</h1>
	<h2>Informations</h2>
	{if $user->sex != NULL}
		<p>Sex: {_"$user->sex"}</p>
	{/if}

	{if $user->birthyear != NULL}
		<p>Birth year: {_"{$user->birthyear}"}</p>
	{/if}

        {!$user->about|texySafe}

	<h2>Opinions</h2>
	@{widget opinionList}
    </div>
{/block}