@{extends layout.phtml}

@{block #subcontent}
    <div id="user-info">
        <img class="icon" src="{$user->getId(),150|userico}" alt="{$user->nickname}" width="150" />
        <h1>{$user->nickname}</h1>
		{if $user->sex != NULL || $user->year != NULL}
			<p>
				{if $user->sex != NULL}
					<strong>Sex:</strong> {_"$user->sex"}<br />
				{/if}
				{if $user->birthyear != NULL}
				<strong>Birth year:</strong> {_"{$user->birthyear}"}<br />
				{/if}
			</p>
		{/if}
		<div class="clear">&nbsp;</div>
		{if $user->about != NULL}
			<h2>About</h2>
			{!$user->about|texySafe}
		{/if}
	</div>
	<div class="clear">&nbsp;</div>
	<h2>Opinions</h2>
	@{widget opinionList}

{/block}
