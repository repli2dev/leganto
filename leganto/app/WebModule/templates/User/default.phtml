@{extends layout.phtml}

@{block #subcontent}
    <div id="user-info">
        <img class="icon" src="{$user->getId(),150|userico}" alt="{$user->nickname}" />
        <h1>{$user->nickname}</h1>
		<p>
			{if $user->sex != NULL}
				<strong>{_"Sex"}:</strong>
				{if $user->sex == "female"}
					{_"Female"}
				{else}
					{_"Male"}
				{/if}
				<br />
			{/if}
			{if $user->birthyear != NULL}
				<strong>{_"Birth year"}:</strong> {$user->birthyear}<br />
			{/if}
			<strong>{_"Read books"}:</strong> {$numOfBooks}<br />
			<strong>{_"Discussion posts"}:</strong> {$numOfPosts}<br />
			<strong>{_"Shelves"}:</strong> {$numOfShelves}<br />
		</p>
		<div class="clear">&nbsp;</div>
		{if $user->about != NULL}
			<h2>{_"About"}</h2>
			{!$user->about|texySafe}
		{/if}
	</div>
	<div class="clear">&nbsp;</div>
	<h2>{_"Opinions"}</h2>
	@{widget opinionList}

{/block}
