{extends layout.phtml}

{block #subcontent}
<h1>
    {$discussion->name}
    {if $discussion->subname != null}
	({$discussion->subname})
    {/if}
</h1>
<p>
{_'Created'}: {$discussion->inserted|time}
<br />
{_'Last post inserted'}: {$discussion->lastPostInserted|time}
<br />
{_'Number of posts'}: {$discussion->numberOfPosts}
</p>
{widget postList}
{/block}