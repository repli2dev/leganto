<div id="book-shelf-control" class="box">
    <h3>{_'Shelves'}</h3>
    {if !empty($shelves)}
	<ul>
	    {foreach $shelves AS $shelf}
		<li>
		    <span class="control">
			<?php $confirm = System::translate("Are you sure you want to remove a book from shelf")." ".$shelf->name; ?>
			{assign link    => $component->link('removeFromShelf', $book->getId(), $shelf->getId())}
			<a onclick="return confirm('{$confirm}')" href="{!$link}">
			    <img src="{$baseUri . 'img/ico/delete.png'}" alt="{_'Delete'}" />
			</a>
		    </span>
			{assign shelfId => $shelf->getId()}
			<a href="{plink User:shelves#books-in-shelf-$shelfId, System::user()->id}" title="{$shelf->name}">{$shelf->name|hardTruncate:19}</a>
		</li>
	    {/foreach}
	</ul>
    {/if}
	{widget form}
</div>