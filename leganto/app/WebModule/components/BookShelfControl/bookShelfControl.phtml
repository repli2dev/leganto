<style>
    #book-shelf-control form {
	padding: 0;
    }
    #book-shelf-control form label {
	width: 0;
	visibility: hidden;
    }
    #book-shelf-control form select {
	margin: 0;
    }
    #book-shelf-control {
	border-color: #336699;
    }
    #book-shelf-control ul li {
	margin-left: 20px;
	line-height: 2em;
    }
</style>

<div id="book-shelf-control" class="box">
    <h3>{_'Shelves'}</h3>
    {if !empty($shelves)}
	<ul>
	    {foreach $shelves AS $shelf}
		<li>
		    <span class="control">
			{assign confirm => System::translate("Are you sure you want to remove a book from shelf *%s*?", $shelf->name)}
			{assign link    => $component->link('removeFromShelf', $book->getId(), $shelf->getId())}
			<a onclick="if(confirm('{$confirm}')) window.location = '{!$link}'">
			    <img src="{$baseUri . 'img/ico/delete.png'}" alt="{_'Delete'}" />
			</a>
		    </span>
		    {$shelf->name}
		</li>
	    {/foreach}
	</ul>
    {/if}
{widget form}
</div>