<div class="item">
	<div class="info-side">
		<img class="icon" src="{$item->userId, 50|userico}" alt="{$item->userNick}" />
		<div class="clear"></div>
		<span class="date">{$item->inserted|date}</span>
	</div>
	<div class="info-top">
		<strong class="title">
			{if $content[0] == 'owned'}
				{_"User"} <a href="{plink User:default,$item->userId}">{$item->userNick}</a> {_"just have added book"} <a href="{plink Book:default,$content[2]}">{$content[3]}</a> {_"to the library"}.
			{/if}
			{if $content[0] == 'general'}
				{_"User"} <a href="{plink User:default,$item->userId}">{$item->userNick}</a> {_"just have added book"} <a href="{plink Book:default,$content[2]}">{$content[3]}</a> {_"to shelf"} <a href="{plink User:shelves}">{$content[1]}</a>.
			{/if}
			{if $content[0] == 'wanted'}
				{_"User"} <a href="{plink User:default,$item->userId}">{$item->userNick}</a> {_"wants to read"} <a href="{plink Book:default,$content[2]}">{$content[3]}</a>.
			{/if}
			{if $content[0] == 'reading'}
				{_"User"} <a href="{plink User:default,$item->userId}">{$item->userNick}</a> {_"just have started reading book"} <a href="{plink Book:default,$content[2]}">{$content[3]}</a>.
			{/if}
		</strong>
	</div>

	<div class="content">
	</div>
	<div class="clear"></div>
</div>
<div class="clear"></div>