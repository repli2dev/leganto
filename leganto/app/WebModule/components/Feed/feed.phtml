<div class="list">
{foreach $feed AS $item}
    <div class=item">

	<img class="icon" src="{$item->userId, 50|userico}" />

	<div class="info">
	    {$item->inserted|date}
	    |
	    <strong class="title">
	    {if $item->type == FeedItemEntity::TYPE_OPINION}
		{!_'<a href="%s" title="%s">%s</a> has an opinion on the book <a href="%s">%s</a>',$presenter->link('User:default', $item->userId), $item->userNick, ExtraString::hardTruncate($item->userNick,20), $presenter->link('Book:default', $item->categoryId), $item->categoryName}
	    {else}
		{if $item->type == FeedItemEntity::TYPE_POST}
		    {!_'<a href="%s" title="%s">%s</a> has contributed to the discussion <a href="%s">%s</a>',$presenter->link('User:default', $item->userId), $item->userNick, ExtraString::hardTruncate($item->userNick,20), $presenter->link('Discussion:discussion', $item->categoryId), $item->categorySubname == NULL ? $item->categoryName : $item->categoryName . " (" . $item->categorySubname . ")"}
		{/if}
	    {/if}
	    </strong>
	</div>

	<div class="content">
		    <p>{!=String::truncate($item->content, 300)|texySafe|stripTags}</p>
	</div>

    </div>

    <hr style="clear:both; visibility:hidden" />
    
{/foreach}

{widget paginator}
</div>