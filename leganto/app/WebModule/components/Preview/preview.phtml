<div class="books list">
	{foreach $books AS $book}
	<div class="item">
		<div class="info-side">
			<img class="icon" src="{$covers[$book->getId()],50|thumbnail}" alt="{$book->title}" width="50" height="80" />
		</div>
		<div class="info-top">
			<a href="{plink Book:default,$book->getId()}" title="{$book->title}{if !empty($book->subtitle)}: {$book->subtitle}{/if}" class="book-title">{$book->title}{if !empty($book->subtitle)}: {$book->subtitle}{/if}</a>
		</div>
		<div class="content">
		<strong><a href="{plink User:default, $opinions[$book->bookNode]->userId}" title="{$opinions[$book->bookNode]->userName}">{$opinions[$book->bookNode]->userName}</a></strong>:
		{!=String::truncate($opinions[$book->bookNode]->content,120)|texySafe|stripTags}
		</div>
		<div class="clear"></div>
	</div>
	{if $iterator->getCounter() % 3 == 0}<div class="clear"></div>{/if}
	{/foreach}
</div>