<div id="feed">
	{foreach $books AS $book}
	<div class="column">
		<img class="avatar_icon" src="{$covers[$book->getId()],50|thumbnail}" alt="{$book->title}" width="50" height="80" />
		<h2>{$book->title}</h2>
		{=String::truncate($opinions[$book->bookNode],200)|texy}
	</div>
	{if $iterator->getCounter() % 3 == 0}<hr style="clear:both; visibility:hidden" /> {/if}
	{/foreach}
</div>