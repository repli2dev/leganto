{snippet introduction-block}
	@{if isset($hint)}
	<div id="note">
	    <h1>{_'Did you know?'}</h1>
		<img alt="Tip" src="img/ico/light_bulb.png" />
        <div class="leftspacer">&nbsp;</div>
        <div class="rightspacer">&nbsp;</div>
	    {$hint->text}
	</div>
	@{else}
		@{if $state == "login"}
			@{widget "loginForm"}
		@{/if}
		@{if $state == "facebook"}
			@{widget "facebookForm"}
		@{/if}
		@{if $state == "twitter"}
			@{widget "twitterForm"}
		@{/if}
		@{if $state == "signup"}
			@{widget "signUpForm"}
		@{/if}
	@{/if}

