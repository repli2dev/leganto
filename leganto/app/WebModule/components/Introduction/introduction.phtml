{snippet introduction-block}
	<div id="introduction">
		@{if isset($hint)}
		<div id="note">
			<h1>{_'Did you know?'}</h1>
			<img alt="Tip" src="img/ico/light_bulb.png" />
			<div class="leftspacer">&nbsp;</div>
			<div class="rightspacer">&nbsp;</div>
			{$hint->text}
		</div>
		@{else}
				
			@{if $state == "login"}
				<div id="introduction-form-wrapper">
				{if $flashes}
				<ul>
					{foreach $flashes as $flash}
						<li>{$flash->message}</li>
					{/foreach}
				</ul>
				{/if}
				@{widget "loginForm"}
				</div>
			@{/if}
			@{if $state == "facebook"}
				@{if $enabled}
					<h1>{_'Do you have account?'}</h1>
					<div id="mentioned-yes">
						<h2>{_'Yes...'}</h2>
						<p>{_'If you want to connect this facebook account please log in.'}</p>
						@{widget "facebookForm"}
					</div>
					<div id="mentioned-no">
						<h2>{_'No...'}</h2>
						<p>{_'If you want to create new account please click on button Create new which log in you automatically in just a second.'}</p>
						<ul>
							{foreach $flashes as $flash}
								<li>{$flash->message}</li>
							{/foreach}
						</ul>
						<a href="{link signUpViaFacebook}" id="signup_button">{_'Create new'}</a>
					</div>
				@{/if}
			@{/if}
			@{if $state == "twitter"}
				@{if $enabled}
					<h1>{_'Do you have account?'}</h1>
					<div id="mentioned-yes">
						<h2>{_'Yes...'}</h2>
						<p>{_'If you want to connect this twitter account please log in.'}</p>
						@{widget "twitterForm"}
					</div>
					<div id="mentioned-no">
						<h2>{_'No...'}</h2>
						<p>{_'If you want to create new account please click on button Create new which log in you automatically in just a second.'}</p>
						<ul>
							{foreach $flashes as $flash}
								<li>{$flash->message}</li>
							{/foreach}
						</ul>
						<a href="{link signUpViaTwitter}" id="signup_button">{_'Create new'}</a>
					</div>
					<div class="clear"></div>
				@{/if}
			@{/if}
			@{if $state == "signup"}
				<div id="introduction-form-wrapper">
				@{widget "signUpForm"}
				</div>
			@{/if}
			@{if $state == "forgotten"}
				<div id="introduction-form-wrapper">
				@{widget "forgottenForm"}
				</div>
			@{/if}
			@{if $state == "renew"}
				<div id="introduction-form-wrapper">
				{if $flashes}
				<ul>
					{foreach $flashes as $flash}
						<li>{$flash->message}</li>
					{/foreach}
				</ul>
				{/if}
				@{widget "renewForm"}
				</div>
			@{/if}
		@{/if}

		@{if $state != "facebook" && $state != "twitter"}
			<div id="info">
				<h1>{_'Welcome!'}</h1>
				<p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Quis nostrud exerci tation ex ea commodo consequat.</p>
			</div>
			<div id="getin">
				<a href="{link changeState,'signup'}" class="ajax" id="signup_button">{_'Sign up'}</a>
				<a href="{link changeState,'login'}" class="ajax" id="login_button">{_'Log in'}</a>
			</div>
			<div class="clear"></div>
			<a href="{link changeState, 'facebook'}">{_'Login with Facebook'}</a> |
			<a href="{link changeState, 'twitter'}">{_'Login with Twitter'}</a> |
			<a href="{link changeState, 'forgotten'}" class="">{_'Forgotten password'}</a>
		@{/if}
	</div>
{/snippet}