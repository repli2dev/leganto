<div class="topics list">
    {foreach $topics AS $topic}
		<div class="item">
			<div class="info-side">
				<img class="icon" src="{$topic->userId, 50|userico}" />
			</div>
			<div class="content">
				<a href="{plink Discussion:posts, $topic->getId(), PostSelector::TOPIC}" class="topic-name">{$topic->name}</a>
				<br />
				<a href="{plink User:default, $topic->userId}" title="{$topic->userName}" class="user-name">{$topic->userName|hardTruncate:20}</a>
				<br />
				{_'Created'}: {$topic->inserted|time}
				<br />
				{_'Last post inserted'}: {$topic->lastPostInserted|time}
				<br />
				{_'Number of posts'}: {$topic->numberOfPosts}
			</div>
			<div class="clear"></div>
		</div>
		{if $iterator->getCounter() % 2 == 0}<div class="clear"></div>{/if}
    {/foreach}
</div>
{widget paginator}
{if Environment::getUser()->isAllowed(Resource::TOPIC, Action::INSERT)}
	<div id="topic-insert">
		<h2>{_'Create a new topic'}</h2>
		{widget form}
	</div>
{/if}