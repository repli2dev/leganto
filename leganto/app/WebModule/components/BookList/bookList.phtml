<div class="books list">
    {foreach $books AS $book}
		<div class="item">
			<div class="info-side">
				<img class="icon" src="{$covers[$book->getId()],50|thumbnail}" alt="{$book->title}" width="50" height="80" />
			</div>
			<div class="info-top">
				<a href="{plink Book:default,$book->getId()}" title="{$book->title}{if !empty($book->subtitle)}: {$book->subtitle}{/if}" class="book-title">{$book->title}{if !empty($book->subtitle)}: {$book->subtitle}{/if}</a>
			</div>
			<div class="content">
				{foreach $authors[$book->bookNode] AS $author}
					<a href="{plink Author:default, $author->getId()}" title="{$author->fullname}" class="author">
					{$author->fullname}
					</a>
					<br />
				{/foreach}
				<img src="{$baseUri}img/rating_{=round($book->rating)}.png" class="rating" />
			</div>

			<div class="tags">
				{if isset($tags[$book->bookNode])}
				{foreach $tags[$book->bookNode] AS $tag}
				<a href="" class="tag">
				{$tag->name}
				</a>
				{/foreach}
				{/if}
			</div>
		</div>
		{if $iterator->getCounter() % 3 == 0}<div class="clear"></div>{/if}
    {/foreach}
</div>
<hr style="clear:both; visibility:hidden" />
{widget paginator}